<div id="outline-container-orgd761fdc" class="outline-2">
<h2 id="orgd761fdc"><code>.gitconfig</code></h2>
<div class="outline-text-2" id="text-orgd761fdc">
<pre class="example">
[user]
  name = foo
  email = foo@abc.com

[push]
  default = upstream

[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto

[alias]
  st = status -s
  ci = commit
  co = checkout

[core]
  excludesfile = ~/.gitignore
  editor = vim

[http]
  sslVerify = false
</pre>
</div>
</div>

<div id="outline-container-org97680e9" class="outline-2">
